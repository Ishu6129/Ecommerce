<% title = product.name %>
<% layout('layouts/boilerplate') -%>

<div class="row">
  <%- include('../partials/flash') %>
  <!-- Product Card -->
  <div class="col-lg-6">
    <div class="card mx-auto" style="width: 18rem; box-shadow: 0 5px 0px black;">
      <img class="card-img-top" src="<%= product.image %>" alt="<%= product.name %>">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <h5 class="card-title">â‚¹<%= product.price %></h5>
        <p class="card-text"><%= product.description %></p>
        <p><b>Reviews:</b> <%= product.reviews.length %></p>

        <form class="d-inline-block" action="/user/<%= product._id %>/add" method="POST">
          <button class="btn btn-success btn-sm">Add To Cart</button>
        </form>

        <% if(currentUser && currentUser.role === 'seller'){ %>
          <a href="/product/<%= product._id %>/edit" class="btn btn-info btn-sm">Edit</a>
          <form class="d-inline-block" action="/products/<%= product._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Review Section -->
  <div class="col-lg-6">

    <h1 class="display-6 mb-4 text-center">Leave A Review</h1>

    <!-- Add Review Form -->
    <form action="/products/<%= product._id %>/review" method="POST">
      <fieldset class="starability-basic mb-3">
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" /><label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" /><label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" /><label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" /><label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" /><label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" name="comment" id="comment" rows="3" style="border: 1px solid #5d5c5c;"></textarea>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-success">Add Review</button>
      </div>
    </form>

    <!-- Existing Reviews -->
    <div class="mt-4">
      <% for(let review of product.reviews){ %>
        <div class="card mt-3">
          <p class="starability-result my-3 mx-3" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
          <div class="card-body">
            <p class="card-text"><b>Comment:</b> <%= review.comment %></p>
          </div>
          <p class="text-muted mx-3 mb-2 text-end">
            <small>Posted on <%= review.createdAt.toDateString() %></small>
          </p>
        </div>
      <% } %>
    </div>

  </div>
</div>
